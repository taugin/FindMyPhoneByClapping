<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.SettingFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/native_ad0"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="276dp"
                    android:layout_below="@+id/ll1"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:id="@+id/sounds_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/sounds" />

                    <TextView
                        android:id="@+id/sounds"
                        style="@style/common_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/sounds_image"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="75dp"
                        android:paddingHorizontal="30dp"
                        android:text="@string/sounds"
                        android:textColor="#2A3135"
                        android:textSize="16dp" />

                    <LinearLayout
                        android:id="@+id/volume_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/sounds"
                        android:layout_alignStart="@+id/sounds_image"
                        android:layout_alignEnd="@+id/sounds_image"
                        android:layout_marginTop="20dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/common_text_style2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:paddingHorizontal="15dp"
                            android:text="@string/volume"
                            android:textColor="#CC2A3135"
                            android:textSize="13dp" />

                        <SeekBar
                            android:id="@+id/volume_seekbar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:progressTint="@color/app_color"
                            android:thumbTint="@color/app_color" />

                        <TextView
                            android:id="@+id/volume_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:layout_weight="0"
                            android:minWidth="36dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/duration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/volume_ll"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            style="@style/common_text_style2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingHorizontal="15dp"
                            android:text="Duration"
                            android:textColor="#CC2A3135"
                            android:textSize="13dp" />

                        <RadioGroup
                            android:id="@+id/duration_radio_group"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="4">

                            <RadioButton
                                android:id="@+id/fifteen_sec"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="2dp"
                                android:layout_weight="1"
                                android:background="@drawable/back_selector"
                                android:button="@null"
                                android:gravity="center"
                                android:paddingVertical="10dp"
                                android:text="15s"
                                android:textColor="@color/navigation_drawer_text_color_selector" />

                            <RadioButton
                                android:id="@+id/thirty_sec"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="2dp"
                                android:layout_weight="1"
                                android:background="@drawable/back_selector"
                                android:button="@null"
                                android:gravity="center"
                                android:paddingVertical="10dp"
                                android:text="30s"
                                android:textColor="@color/navigation_drawer_text_color_selector" />

                            <RadioButton
                                android:id="@+id/one_min"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="2dp"
                                android:layout_weight="1"
                                android:background="@drawable/back_selector"
                                android:button="@null"
                                android:gravity="center"
                                android:paddingVertical="10dp"
                                android:text="1m"
                                android:textColor="@color/navigation_drawer_text_color_selector" />

                            <RadioButton
                                android:id="@+id/two_min"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="2dp"
                                android:layout_weight="1"
                                android:background="@drawable/back_selector"
                                android:button="@null"
                                android:gravity="center"
                                android:paddingVertical="10dp"
                                android:text="2m"
                                android:textColor="@color/navigation_drawer_text_color_selector" />


                        </RadioGroup>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/current_sound"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/duration"
                        android:layout_alignStart="@+id/sounds_image"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/common_text_style2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="15dp"
                            android:paddingRight="5dp"
                            android:text="@string/current_sound"
                            android:textColor="#CC2A3135"
                            android:textSize="13dp" />

                        <TextView
                            android:id="@+id/song_item"
                            style="@style/common_text_style2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingHorizontal="5dp"
                            android:text="None"
                            android:textColor="@color/app_color"
                            android:textSize="13dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/changeRingtone"
                        style="@style/common_text_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/current_sound"
                        android:layout_centerHorizontal="true"
                        android:layout_marginHorizontal="80dp"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/back_checked"
                        android:backgroundTint="@color/color_common_btn"
                        android:gravity="center"
                        android:paddingVertical="10dp"
                        android:text="@string/change_sound_entry"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/ringSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/sounds_image"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="60dp"
                        android:outlineAmbientShadowColor="@color/app_color"
                        android:textOff="OFF"
                        android:textOn="ON"
                        app:thumbTint="@color/color_common_btn" />


                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <RelativeLayout
                        android:id="@+id/flashlight"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/flashlight_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:src="@drawable/flashlight" />

                        <TextView
                            style="@style/common_text_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/flashSwitch"
                            android:layout_alignStart="@+id/flashlight_image"
                            android:autoSizeMaxTextSize="16sp"
                            android:autoSizeMinTextSize="14sp"
                            android:paddingHorizontal="10dp"
                            android:singleLine="true"
                            android:text="@string/flash_light"
                            android:textColor="#2A3135" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/flashSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@+id/flashlight_image"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="8dp"
                            android:layout_marginBottom="8dp"
                            android:outlineAmbientShadowColor="@color/app_color"
                            android:textOff="OFF"
                            android:textOn="ON"
                            app:thumbTint="@color/color_common_btn" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/phone_vibrate"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/phone_vibrate_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:src="@drawable/phone_vibrate" />

                        <TextView
                            style="@style/common_text_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/vibrationSwitch"
                            android:layout_alignStart="@+id/phone_vibrate_image"
                            android:autoSizeMaxTextSize="16sp"
                            android:autoSizeMinTextSize="14sp"
                            android:paddingHorizontal="10dp"
                            android:singleLine="true"
                            android:text="@string/phone_vibrate"
                            android:textColor="#2A3135" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/vibrationSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@+id/phone_vibrate_image"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="8dp"
                            android:layout_marginBottom="8dp"
                            android:outlineAmbientShadowColor="@color/app_color"
                            android:textOff="OFF"
                            android:textOn="ON"
                            app:thumbTint="@color/color_common_btn" />


                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <androidx.cardview.widget.CardView
            android:id="@+id/native_ad0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            app:cardBackgroundColor="@color/start_click_color"
            app:contentPadding="4dp">

            <include
                android:id="@+id/ad_include_layout"
                layout="@layout/rab_card_tiny" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</FrameLayout>
