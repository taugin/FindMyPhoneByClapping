<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.FindFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/switch_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tap"
                        style="@style/common_text_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="20dp"
                        android:layout_toRightOf="@+id/menu_btn"
                        android:gravity="center"
                        android:text="@string/tap_to_active"
                        android:textColor="@color/app_color"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/enable_disable"
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp" />

                    <TextView
                        android:id="@+id/use"
                        style="@style/common_text_style2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_toRightOf="@+id/menu_btn"
                        android:background="@drawable/use"
                        android:drawableLeft="@drawable/info"
                        android:drawablePadding="20dp"
                        android:gravity="center"
                        android:paddingHorizontal="30dp"
                        android:paddingVertical="5dp"
                        android:text="@string/how_to_use_entry"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/switch_layout"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <RelativeLayout
                        android:id="@+id/flashlight"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/flashlight">

                        <TextView
                            style="@style/common_text_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/flashSwitch"
                            android:paddingHorizontal="10dp"
                            android:text="@string/flash_light"
                            android:textColor="#2A3135"
                            android:textSize="16dp" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/flashSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="8dp"
                            android:layout_marginBottom="8dp"
                            android:outlineAmbientShadowColor="@color/app_color"
                            android:textOff="OFF"
                            android:textOn="ON"
                            app:thumbTint="@color/app_color" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/phone_vibrate"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/phone_vibrate">

                        <TextView
                            style="@style/common_text_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/vibrationSwitch"
                            android:paddingHorizontal="10dp"
                            android:text="@string/phone_vibrate"
                            android:textColor="#2A3135"
                            android:textSize="16dp" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/vibrationSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="8dp"
                            android:layout_marginBottom="8dp"
                            android:outlineAmbientShadowColor="@color/app_color"
                            android:textOff="OFF"
                            android:textOn="ON"
                            app:thumbTint="@color/app_color" />


                    </RelativeLayout>

                </LinearLayout>
            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/native_ad_tiny"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        app:contentPadding="4dp">

        <include
            android:id="@+id/ad_include_layout"
            layout="@layout/rab_card_tiny" />
    </androidx.cardview.widget.CardView>


</FrameLayout>