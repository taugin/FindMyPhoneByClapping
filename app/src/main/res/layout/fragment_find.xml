<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.FindFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/native_ad_tiny">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/controller_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <RelativeLayout
                    android:id="@+id/flashlight"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/flashlight_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/flashlight" />

                    <TextView
                        style="@style/common_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/flashSwitch"
                        android:layout_alignStart="@+id/flashlight_image"
                        android:paddingHorizontal="10dp"
                        android:text="@string/flash_light"
                        android:textColor="#2A3135"
                        android:textSize="16dp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/flashSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/flashlight_image"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginBottom="8dp"
                        android:outlineAmbientShadowColor="@color/app_color"
                        android:textOff="OFF"
                        android:textOn="ON"
                        app:thumbTint="@color/color_common_btn" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/phone_vibrate"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/phone_vibrate_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/phone_vibrate" />

                    <TextView
                        style="@style/common_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/vibrationSwitch"
                        android:layout_alignStart="@+id/phone_vibrate_image"
                        android:paddingHorizontal="10dp"
                        android:text="@string/phone_vibrate"
                        android:textColor="#2A3135"
                        android:textSize="16dp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/vibrationSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/phone_vibrate_image"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginBottom="8dp"
                        android:outlineAmbientShadowColor="@color/app_color"
                        android:textOff="OFF"
                        android:textOn="ON"
                        app:thumbTint="@color/color_common_btn" />


                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/switch_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="18dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tap"
                    style="@style/common_text_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/menu_btn"
                    android:gravity="center"
                    android:text="@string/tap_to_active"
                    android:textColor="@color/app_color"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/enable_disable"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp" />

                <TextView
                    android:id="@+id/use"
                    style="@style/common_text_style2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_toRightOf="@+id/menu_btn"
                    android:background="@drawable/use"
                    android:drawableLeft="@drawable/info"
                    android:drawablePadding="20dp"
                    android:gravity="center"
                    android:paddingHorizontal="30dp"
                    android:paddingVertical="5dp"
                    android:text="@string/how_to_use_entry"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/native_ad_tiny"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        app:contentPadding="4dp">

        <include
            android:id="@+id/ad_include_layout"
            layout="@layout/rab_card_tiny" />
    </androidx.cardview.widget.CardView>


</RelativeLayout>